{% extends 'base.html.twig' %}

{% block page_title %}Log in!{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xs-12 col-md-6 col-md-push-3 col-lg-4 col-lg-push-4">
            <form method="post" class="form-horizontal" action="{{ path('home') }}">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                {#
                <div class="form-group">
                    <label for="inputUsername" class="hidden-xs col-sm-2 control-label">Username</label>
                    <div class="col-xs-12 col-sm-10">
                        <input type="email" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Username" required autofocus>
                    </div>
                </div>
                #}
                <input type="hidden" name="username" value="user" />
                <div class="form-group">
                    <label for="inputPassword" class="hidden-xs col-sm-2 control-label">Password</label>
                    <div class="col-xs-12 col-sm-10">
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="form-group">
                    <div class="col-xs-12 col-sm-offset-2 col-sm-10">
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12 col-sm-offset-2 col-sm-10">
                        <button class="btn btn-lg btn-primary" type="submit">Sign in</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}