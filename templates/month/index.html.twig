{% extends 'base.html.twig' %}
{% block content %}
    <a class="btn btn-default" href="{{ path('month_new') }}"><i class="glyphicon glyphicon-plus"></i>&nbsp;New</a>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Month</th>
            <th>Start</th>
            <th>End</th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        {% for month in months %}
            <tr>
                <th scope="row">{{ month.id }}</th>
                <td>{{ month }}</td>
                <td>{{ month.startDate|date('Y.m.d') }}</td>
                <td>{{ month.endDate|date('Y.m.d') }}</td>
                <td>
                    <a href="{{ path('month_edit', {id: month.id }) }}"><i class="glyphicon glyphicon-edit"></i></a>&nbsp;
                    <a href="{{ path('month_delete', {id: month.id }) }}"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}